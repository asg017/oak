echo = async (path, content) => command("echo", ["-n", content], path);

cat = async (path, files) => command("cat", files, path);

a = task({
  target: "a",
  run: a => echo(a, "a")
});

b = task({
  target: "b",
  run: a => echo(a, "b")
});
c = task({
  target: "c",
  run: c => cat(c, [a, b])
});

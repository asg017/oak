/*
a  b c   x y  m
|  |/    |/      
d  e     z
|  |
f  g
| /
h
*/

a = task({
    path: 'a',
    run: a => shell`echo -n "a" > ${a}`
})

b = task({
    path: 'b',
    run: b => shell`echo -n "b" > ${b}`
})

c = task({
    path: 'c',
    run: c => shell`echo -n "c" > ${c}`
})

x = task({
    path: 'x',
    run: x => shell`echo -n "x" > ${x}`
})

y = task({
    path: 'y',
    run: y => shell`echo -n "y" > ${y}`
})

m = task({
    path: 'm',
    run: m => shell`echo -n "m" > ${m}`
})

d = task({
    path: 'd',
    run: d => shell`cat ${a} > ${d}`
})

e = task({
    path: 'e',
    run: e => shell`cat ${b} ${c} > ${e}`
})

z = task({
    path: 'z',
    run: z => shell`cat ${x} ${y} > ${z}`
})

f = task({
    path: 'f',
    run: f => shell`cat ${d} > ${f}`
})

g = task({
    path: 'g',
    run: g => shell`cat ${e} > ${g}`
})

h = task({
    path: 'h',
    run: h => shell`cat ${f} ${g} > ${h}`
})
